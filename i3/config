bar {
        status_command ~/.config/i3/bumblebee-status/bumblebee-status \
                -m title disk memory battery nic pipewire datetime \
                -p title.max=80 title.scroll=true disk.format="{percent:05.02f}%" memory.usedonly=true datetime.format="%Y-%m-%d %H:%M" nic \
                -t perona
        position top
        font pango:Cozette 8 

# ghost princess
